{
  "expo": {
    "name": "Viva_Home",
    "slug": "Viva_Home",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vivahome",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app uses camera and gallery to upload images when a user selects them."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.vivahome"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
